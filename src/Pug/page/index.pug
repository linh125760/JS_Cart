    section.new-products.container 
        +title("SẢN PHẨM MỚI")
        +carousel_product(new_product)
    section.gallery.container-fluid
        .row 
            each img_gallery in gallery
                - const {img, name, year} = img_gallery;
                .col-lg-3.col-md-6.col-sm-6.p-0
                    .gallery-img(style="background-image: url(./assets/img/" + img + ")")
                        .content-img.text-center
                            span= year 
                            h2= name
