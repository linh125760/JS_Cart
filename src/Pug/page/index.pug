extends ../base/base.pug

mixin time-sale(number, format)
    .col-6.time__items.text-center
        h3= number 
        p= format

mixin title(title)
    .text-center 
        h2.title= title

mixin blog_item()
    each blog_post in blog_index 
        - const {img, title, author, date, content} = blog_post; 
        .col-lg-6.blog-items 
            .blog-img
                img(src="../assets/img/" + img, alt="Blog Image")
                i.bi.bi-link-45deg.text-center
            .blog-content
                h4.title-blog= title 
                p.info-blog= "Đăng bởi " + author + " | " + date + " | 60 bình luận"
                p.content-blog.text-justify= content
                a(href="#") Read more 
block variables
    - const title = "Trang Chủ";
    //- Current để định vị trí của menu (thẻ li có style active)
    - const current = "/";
    include ../variables/var_index.pug

