extends ../base/base 

block variables 
    - const title = "Chi tiết sản phẩm";
    - const current = "/product-detail.html";

    include ../component/breadcrumb 
    include ../variables/var_index.pug
    include ../variables/var_breadcrumb

mixin title(title)
    .text-center 
        h2.title= title
