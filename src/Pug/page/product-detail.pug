        .row.detail-top
            .col-md-7
                .product-img
                    .row 
                        .col-2.d-flex
                            .thumbnail.align-items-center 
                                img.img-thumbnail(src="../assets/img/1.jpg" alt="")
                                img.img-thumbnail(src="../assets/img/2.jpg" alt="")
                                img.img-thumbnail(src="../assets/img/3.jpg" alt="")
                                img.img-thumbnail(src="../assets/img/4.jpg" alt="")
                                img.img-thumbnail(src="../assets/img/5.jpg" alt="")
                        .col-10
                            .big-img
                                img(src="../assets/img/3.jpg" alt="")
            .col-md-5.product-info
                +title_page("RƯỢU NHO NĂM 1978")
                h2.price 330.000
                    sup đ
                hr
                .star.d-flex
                    i.bi.bi-star-fill
                    i.bi.bi-star-fill
                    i.bi.bi-star-fill
                    i.bi.bi-star-half
                    i.bi.bi-star
                    span 1 Review(s) | Add Your Review
                hr
                h3 Màu sắc
                .d-flex 
                    .square.bg-warning
                    .square.bg-dark
                    .square.bg-danger
                h3 Kích cỡ
                select#size(name='size')
                    option(value='big') Loại to
                    option(value='medium') Trung bình
                    option(value='small') Loại nhỏ
                h3 Số lượng
                .d-flex
                    input(type="number" value="1").add-number
                    a(href="#").btn-custom ADD TO CART
                .d-flex.action
                    .action-items
                        a(href="#") 
                            i.bi.bi-heart-fill 
                                span Yêu Thích
                    .action-items
                        a(href="#") 
                            i.bi.bi-reception-4 
                                span So Sánh
                    .action-items
                        a(href="#") 
                            i.bi.bi-envelope-fill
                                span Email
